{
  "name": "wadi-app",
  "version": "5.1.0",
  "scripts": {
    "dev": "pnpm --filter \"./apps/*\" --parallel run dev",
    "dev:frontend": "pnpm --filter frontend run dev",
    "dev:api": "pnpm --filter wadi-api run dev",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build": "pnpm install && pnpm -r build",
    "smoke:api": "node apps/api/dist/index.js",
    "start": "pnpm --filter wadi-api run start",
    "db:types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > packages/wadi-db-types/src/database.ts"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "@eslint/js": "^9.39.1",
    "typescript-eslint": "^8.46.4",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-boundaries": "^5.3.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.86.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.9.1"
  }
}
