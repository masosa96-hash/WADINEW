{
  "name": "wadi-app",
  "version": "5.1.0",
  "scripts": {
    "dev": "pnpm --filter frontend run dev",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build": "pnpm install && pnpm -r build",
    "smoke:api": "node apps/api/dist/index.js",
    "smoke:health": "node -e \"const http=require('http');http.get('http://127.0.0.1:'+process.env.PORT+'/system/health',r=>{if(r.statusCode!==200){process.exit(1)};process.exit(0)}).on('error',()=>process.exit(1));\"",
    "start": "cd apps/api && node src/index.js"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-plugin-boundaries": "^5.3.1",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.86.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.9.1"
  }
}
